# Alert for any instance that has CPU usage of more than 85% for more than 30 mins
ALERT HighCpuUsage
  IF rate(node_cpu{mode="idle"}[5m]) < 0.15
  FOR 10m
  LABELS {
    severity="page"
  }
  ANNOTATIONS {
    summary = "High CPU Usage on {{ $labels.instance }}",
    description = "CPU Usage on {{ $labels.instance }} over the last 30 minutes exceeds threshold (current value: {{ $value }} Idle)",
  }
