# Alert for any instance that has Memory usage of more than 85% for more than 5 mins
ALERT NodeHighMemoryUsage
  IF (node_memory_MemAvailable or (node_memory_MemFree + node_memory_Buffers + node_memory_Cached)) / node_memory_MemTotal < 0.1
  FOR 5m
  LABELS {
    severity="page"
  }
  ANNOTATIONS {
    summary = "High Memory Usage on {{ $labels.instance }}",
    description = "{{ $labels.instance }} has a Memory Usage over 5 minutes (current value: {{ $value }}%)",
  }
